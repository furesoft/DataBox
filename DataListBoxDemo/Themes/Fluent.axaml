<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <TemplatedDataGrid />
  </Design.PreviewWith>

  <Style Selector="TemplatedDataGrid">
    <Setter Property="Template">
      <ControlTemplate>
        <DockPanel>
          <TemplatedDataGridColumnHeadersPresenter Name="PART_HeadersPresenter"
                                                   DockPanel.Dock="Top" />
          <TemplatedListBox Name="PART_DataListBox" />
        </DockPanel>
      </ControlTemplate>
    </Setter>
  </Style>

  <Style Selector="TemplatedDataGrid /template/ TemplatedDataGridColumnHeadersPresenter#PART_HeadersPresenter">
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="Background" Value="Transparent" />
  </Style>

  <Style Selector="TemplatedDataGrid /template/ ListBox#PART_DataListBox">
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="VirtualizationMode" Value="Simple" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="(ScrollViewer.HorizontalScrollBarVisibility)" Value="Disabled" />
    <Setter Property="(ScrollViewer.VerticalScrollBarVisibility)" Value="Auto" />
    <Setter Property="ItemsPanel">
      <Setter.Value>
        <ItemsPanelTemplate>
          <TemplatedDataGridRowsPresenter Orientation="Vertical" />
        </ItemsPanelTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="ItemTemplate">
      <Setter.Value>
        <DataTemplate>
          <TemplatedDataGridCellsPresenter HorizontalAlignment="Left" 
                                           VerticalAlignment="Top" 
                                           Background="Transparent" />
        </DataTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style Selector="TemplatedDataGrid /template/ ListBox#PART_DataListBox ListBoxItem">
    <Setter Property="Margin" Value="0" />
    <Setter Property="Padding" Value="0" />
  </Style>

</Styles>

