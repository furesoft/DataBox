        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="350"
        WindowStartupLocation="CenterScreen"
        Width="600" Height="350"
        UseLayoutRounding="True"
        x:Class="CellPanelDemo.MainWindow"
        Title="CellPanelDemo">
  <DockPanel>
    
    <Panel Height="32"
           DockPanel.Dock="Top">
      
    </Panel>
