      <c:RowsListBox Items="{Binding Items}">
        <c:RowsListBox.Styles>
          <Style Selector="ListBox">
            <Setter Property="VirtualizationMode" Value="Simple" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="(ScrollViewer.HorizontalScrollBarVisibility)" Value="Disabled" />
            <Setter Property="(ScrollViewer.VerticalScrollBarVisibility)" Value="Auto" />
            <Setter Property="ItemsPanel">
              <Setter.Value>
                <ItemsPanelTemplate>
                  <c:RowsPresenter DataContext="{Binding ListData}" Orientation="Vertical"/>
                </ItemsPanelTemplate>
              </Setter.Value>
            </Setter>
          </Style>
          <Style Selector="ListBoxItem">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />
          </Style>
        </c:RowsListBox.Styles>
        <c:RowsListBox.ItemTemplate>
          <DataTemplate>
            <c:CellsPresenter ListData="{Binding $parent[ListBox].DataContext.ListData}"
                              Background="LightGray">
              <c:Cell Background="Red">
                <TextBlock Text="Column 0" Margin="2" />
              </c:Cell>
              <c:Cell Background="Green">
                <TextBlock Text="{Binding}" Margin="2" />
              </c:Cell>
              <c:Cell Background="Blue">
                <TextBlock Text="Column 2" Margin="2" />
              </c:Cell>
              <c:Cell Background="Yellow">
                <TextBlock Text="Column 3" Margin="2" />
              </c:Cell>
            </c:CellsPresenter>
          </DataTemplate>
        </c:RowsListBox.ItemTemplate>
      </c:RowsListBox>

    </Border>
  </DockPanel>
</Window>
